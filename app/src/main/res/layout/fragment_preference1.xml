<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Preference1Fragment">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back button"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="@string/preference1_progress"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="0.33"
                android:background="@drawable/progress_fill" />

            <View
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="0.67"
                android:background="@drawable/progress_background" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/footer_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/preference1_title"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/preference1_subtitle"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3">

                <!-- Back Pain -->
                <CheckBox
                    android:id="@+id/cb_back_pain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_weight_loss"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_back_pain"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Knee Pain -->
                <CheckBox
                    android:id="@+id/cb_knee_pain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_weight_loss"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_knee_pain"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Shoulder Pain -->
                <CheckBox
                    android:id="@+id/cb_shoulder_pain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_shoulder_pain"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_shoulder_pain"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Neck Pain -->
                <CheckBox
                    android:id="@+id/cb_neck_pain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/img_neck_pain"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_neck_pain"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Joint Stiffness -->
                <CheckBox
                    android:id="@+id/cb_joint_stiffness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_joint_stiffness"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_joint_stiffness"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Stress -->
                <CheckBox
                    android:id="@+id/cb_stress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/img_stress"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_stress"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Low Flexibility -->
                <CheckBox
                    android:id="@+id/cb_low_flexibility"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_low_flexibility"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_low_flexibility"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Digestive Issues -->
                <CheckBox
                    android:id="@+id/cb_digestive_issues"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_digestive_issues"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_digestive_issues"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <!-- Balance Issues -->
                <CheckBox
                    android:id="@+id/cb_balance_issues"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/preference_item_background"
                    android:button="@null"
                    android:checked="false"
                    android:drawableTop="@drawable/img_balance_issues"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:minHeight="120dp"
                    android:padding="8dp"
                    android:text="@string/problem_balance_issues"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer_background"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/primary_color"
            android:elevation="8dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/preference1_continue"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="28dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
